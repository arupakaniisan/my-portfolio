---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main>
		<section class="hero">
			<div class="badge">Available for Work</div>
			<h1>Hi, I'm <span class="text-gradient">Your Name</span></h1>
			<p>Web Developer & Designer creating digital experiences.</p>
		</section>

		<section class="projects">
			<h2>Selected Projects</h2>
			<div class="grid">
				<div class="card">
					<div class="card-content">
						<span>2024</span>
						<h3>Project Alpha</h3>
						<p>A high-performance web application built with Astro.</p>
					</div>
				</div>
				<div class="card">
					<div class="card-content">
						<span>2023</span>
						<h3>Project Beta</h3>
						<p>Creative design exploration and UI implementation.</p>
					</div>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	main {
		max-width: 900px;
		margin: 0 auto;
		padding: 80px 20px;
	}

	.hero {
		text-align: center;
		margin-bottom: 100px;
	}

	.badge {
		display: inline-block;
		padding: 4px 12px;
		border-radius: 100px;
		background: #eef2ff;
		color: var(--accent);
		font-size: 0.8rem;
		font-weight: bold;
		margin-bottom: 20px;
	}

	h1 {
		font-size: 4rem;
		margin: 0;
		line-height: 1.1;
	}

	.text-gradient {
		background: linear-gradient(45deg, var(--accent), #ff55d2);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.hero p {
		font-size: 1.5rem;
		color: var(--text-sub);
		margin-top: 20px;
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 20px;
	}

	.card {
		background: var(--card-bg);
		border: 1px solid #eeeeee;
		border-radius: 24px;
		padding: 40px;
		transition: transform 0.2s ease;
		cursor: pointer;
	}

	.card:hover {
		transform: translateY(-5px);
		border-color: var(--accent);
	}

	.card span {
		font-size: 0.8rem;
		color: var(--text-sub);
	}

	h3 {
		font-size: 1.8rem;
		margin: 10px 0;
	}

	@media (max-width: 600px) {
		h1 { font-size: 2.5rem; }
	}
</style>